{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
  },
  "exclude": ["node_modules/*"],
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
},
}
